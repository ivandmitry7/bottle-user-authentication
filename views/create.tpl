<form method="post" action="/create" class="form-signin">
<h2 class="form-signin-heading">Register</h2>


<input class="form-control" type="text" name="username" size="20" placeholder="Desired username">
<input class="form-control" type="text" name="email" size="20" placeholder="Email address">
<input class="form-control" type="password" name="password" size="20" placeholder="Password">


<br>
<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>

%rebase _layout title='Sign Up', username=username